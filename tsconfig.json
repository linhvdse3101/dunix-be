{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "sourceMap": true,
    "paths": {
      "*": ["*"],
      "dto/*": ["src/dtos/*"],
      "repositories/*": ["repositories/*"],
      "models/*": ["models/*"],
      "services/*": ["services/*"],
      "controllers/*": ["controllers/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "coverage"]
}